generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:./data.db"
}

// Project specific

// Batch

model BatchJob {
  id                         String           @id @default(cuid())
  instanceId                 String?          @map("instance_id")
  instance                   Instance?        @relation(fields: [instanceId], references: [id])
  userProfileId              String?          @map("user_profile_id")
  userProfile                UserProfile?     @relation(fields: [userProfileId], references: [id])
  runInATransaction          Boolean          @map("run_in_a_transaction")
  status                     String
  progressPct                Int?             @map("progress_pct")
  message                    String?
  jobType                    String           @map("job_type")
  refModel                   String?          @map("ref_model")
  refId                      String?          @map("ref_id")
  parameters                 String?          // Stringified JSON
  created                    DateTime         @default(now())
  updated                    DateTime         @updatedAt

  @@index([refId])
  @@map("batch_job")
}

// Wait-list

model Waitlist {
  email                        String               @id

  @@map("waitlist")
}

// IntentCode: Engine

model Version {
  id                         String            @id @default(cuid())
  name                       String            @unique
  version                    String

  @@map("version")
}

// IntentCode: Source graph

model SourceEdge {
  id                         String            @id @default(cuid())
  fromId                     String            @map("from_id")
  from                       SourceNode        @relation("from", fields: [fromId], references: [id])
  toId                       String            @map("to_id")
  to                         SourceNode        @relation("to", fields: [toId], references: [id])
  status                     String
  name                       String

  @@unique([fromId, toId, name])
  @@map("source_edge")
}

model SourceNode {
  id                         String            @id @default(cuid())
  parentId                   String?           @map("parent_id")
  parent                     SourceNode?       @relation("parent", fields: [parentId], references: [id])
  instanceId                 String            @map("instance_id")
  instance                   Instance          @relation(fields: [instanceId], references: [id])
  status                     String
  type                       String
  name                       String
  content                    String?
  contentHash                String?           @map("content_hash")
  jsonContent                Json?             @map("json_content")
  jsonContentHash            String?           @map("json_content_hash")
  contentUpdated             DateTime?         @map("content_updated")  // content or jsonContent
  created                    DateTime          @default(now())
  updated                    DateTime          @updatedAt

  outgoingEdges              SourceEdge[]      @relation("from")
  incomingEdges              SourceEdge[]      @relation("to")
  children                   SourceNode[]      @relation("parent")
  ofSourceNodeTechs          SourceNodeGeneration[]

  @@unique([parentId, instanceId, type, name])
  @@index([contentHash])
  @@map("source_node")
}

model SourceNodeGeneration {
  // Note: it could be useful to track prompts (with a hash/version no?) here
  id                         String            @id @default(cuid())
  sourceNodeId               String            @map("source_node_id")
  sourceNode                 SourceNode        @relation(fields: [sourceNodeId], references: [id])
  techId                     String            @map("tech_id")
  tech                       Tech              @relation(fields: [techId], references: [id])
  temperature                Float?
  prompt                     String
  promptHash                 String            @map("prompt_hash")
  content                    String?
  contentHash                String?           @map("content_hash")
  jsonContent                Json?             @map("json_content")
  jsonContentHash            String?           @map("json_content_hash")
  created                    DateTime          @default(now())
  updated                    DateTime          @updatedAt

  @@unique([sourceNodeId, techId, promptHash])
  @@map("source_node_generation")
}
